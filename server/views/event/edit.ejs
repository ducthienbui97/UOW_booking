<%- include ../head%>
<form id="event" name="event" method="post" action="/event/<%=event.id%>/edit" enctype="multipart/form-data" >
    <label for="name">Title</label>
    <input name="name" type="text" required value="<%=event.name%>"/> <br/>
    <label for="location">Location</label>
    <input name="location" type="text" required value="<%=event.location%>"/><br/>
    <label for="start_time">Start Time</label>
    <input name="start_time" id="start_time" type="datetime-local" required value="<%=event.start_time.toISOString().slice(0,-1)%>"/><br/>
    <label for="end_time">End Time</label>
    <input name="end_time" id="end_time"  type="datetime-local" required value="<%=event.end_time.toISOString().slice(0,-1)%>"/><br/>
    <img src="<%=event.imageURL%>">
    <label for="image">Image</label>
    <input name="image" type="file" accept="image/*"/><br/>
    <label for="description">Description</label>
    <textarea name="description" required><%=event.description%></textarea><br/>
    <label for="price">Price</label>
    <input name="price" type="number" step="0.01" min="0" required value="<%=event.price%>"><br/>
    <label for="capacity">Capacity</label>
    <input name="capacity" type="number" step="1" min="1" required value="<%=event.capacity%>"><br/>
    <label for="max">Maximum number of ticket per user</label>
    <input name="max" type="number" min="1" step="1" required value="<%=event.max%>"><br/>
    <input class="btn" type="submit" value="Save" />
</form>
<%-include ../foot%>
