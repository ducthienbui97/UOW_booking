<%- include ../head%>
<form id="event" name="event" method="post" action="/event/<%=event.id%>/edit" enctype="multipart/form-data" >
    <div class="form-group">
        <label for="name">Title</label>
        <input name="name" type="text" required class="form-control" value="<%=event.name%>"/>
    </div>
    <div class="form-group">
        <label for="location">Location</label>
        <input name="location" type="text" required class="form-control" value="<%=event.location%>"/>
    </div>
    <div class="form-row">
        <div class="form-group  col-md-6">
            <label for="start_time">Start Time</label>
            <input name="start_time" type="datetime-local" required class="form-control"  value="<%=event.start_time.toISOString().slice(0,-1)%>">
        </div>
        <div class="form-group  col-md-6">
            <label for="end_time">End Time</label>
            <input name="end_time" type="datetime-local" required class="form-control" value="<%=event.end_time.toISOString().slice(0,-1)%>"/>
        </div>
    </div>
    <div class="form-group">
        <label for="image">Image</label>
        <div>
            <img src="<%=event.imageURL%>" class="img-fluid  float-left d-block" style="max-height: 300px">
        </div>
        <input name="image" type="file" accept="image/*" class="form-control-file"/>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" required class="form-control"><%=event.description%></textarea>
    </div>
    <div class="form-row">
        <div class="form-group col-md-4">
            <label for="price">Price</label>
            <input name="price" type="number" step="0.01" min="0" required class="form-control" value="<%=event.price.toFixed(2)%>">
        </div>
        <div class="form-group col-md-4">
            <label for="capacity">Capacity</label>
            <input name="capacity" type="number" step="1" min="1" required class="form-control" value="<%=event.capacity%>">
        </div>
        <div class="form-group col-md-4">
            <label for="max">Maximum number of ticket per user</label>
            <input name="max" type="number" min="1" step="1" class="form-control"  value="<%=event.max%>">
        </div>
    </div>
    <div class="row">
        <div class="md-3">
            <input class="btn" type="submit" value="Save" />
        </div>
        <div class="md-3">
            <a href="/event/<%=event.id%>" ><button type="button" class="btn">Back</button></a>
        </div>
    </div>
</form>

<%-include ../foot%>
