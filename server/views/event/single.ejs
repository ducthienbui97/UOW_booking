<%- include ../head%>

<h2><%= event.name%> by <%= creator.name%></h2>
<img src="<%=event.imageURL%>">
<p>Start Time: <%= event.start_time.toLocaleString() %></p>
<p>End Time: <%= event.end_time.toLocaleString() %></p>
<p>Location: <%= event.location %></p>
<p>Description: <%= event.description%></p>
<p>Price: $<%= event.price%></p>

<form action="/booking/<%=event.id%>" method="get">
    <select name="count">
        <%for(var i = 1; i <= event.max; i++){%>
        <option value=<%=i%> ><%=i%></option>
        <%}%>
    </select>
    <button type="submit">Submit</button>
</form>
<%if(locals.user && user.id == event.userId){%>
    <a href="/event/<%=event.id%>/promotion%>"><button>Manage Promotions</button></a>
<%}%>
<%-include ../foot%>
